@{
    ViewData["Title"] = "About Us";
}

<div class="container mt-5">
    <!-- Tiêu đề chính -->
    <div class="text-center">
        <h1 class="display-4 fw-bold">About Our Store</h1>
        <p class="lead text-muted">Fashion for everyone, anywhere, anytime.</p>
    </div>

    <!-- Hình ảnh và giới thiệu -->
    <div class="row mt-4 align-items-center">
        <div class="col-md-6">
            <img src="/images/product/anh2.jpg" alt="About Us" class="img-fluid rounded shadow">
        </div>
        <div class="col-md-6">
            <h2 class="fw-bold">Who We Are</h2>
            <p>
                Welcome to **FashionHub**, your ultimate destination for stylish and affordable clothing.
                Founded in 2020, we aim to provide high-quality apparel that fits every style and occasion.
            </p>
            <p>
                Our mission is to bring fashion closer to you, making it accessible for everyone.
                From casual wear to formal attire, we have something special for every moment.
            </p>
        </div>
    </div>

    <!-- Sứ mệnh -->
    <div class="row mt-5">
        <div class="col-12">
            <h2 class="text-center fw-bold">Our Mission</h2>
            <p class="text-center text-muted">
                To inspire confidence and bring joy through fashion, one outfit at a time.
            </p>
        </div>
    </div>

    <!-- Đội ngũ -->
    <div class="row mt-5 align-items-center">
        <div class="col-md-6 order-md-2">
            <img src="/images/product/anh1.jpg" alt="Team" class="img-fluid rounded shadow">
        </div>
        <div class="col-md-6">
            <h2 class="fw-bold">Our Team</h2>
            <p>
                At **FashionHub**, we have a team of passionate designers, stylists, and fashion experts who work tirelessly to bring you the latest trends.
            </p>
            <p>
                Whether you're shopping online or visiting us in-store, our friendly staff is here to help you find the perfect outfit.
            </p>
        </div>
    </div>

    <!-- Lời kết -->
    <div class="text-center mt-5">
        <h2 class="fw-bold">Join Us on Our Journey</h2>
        <p>
            Discover the perfect blend of style and comfort at FashionHub.
            Shop with us today and let your fashion journey begin!
        </p>
        <a href="/" class="btn btn-primary">Shop Now</a>
    </div>
</div>
