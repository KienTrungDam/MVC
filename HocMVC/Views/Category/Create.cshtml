@model Category
<!-- add chi them 1 nen khong list<category> -->

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2 text-center">
            <h2 class="text-primary">Create new category</h2>
            <!--thanh ngang horizontal -->
            <hr/>
        </div>
        <!-- canh bao het validation o day -->
        <div asp-validation-summary="All" ></div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control"/>
            <!-- canh bao validation -->
            <span asp-validation-for="Name" class="text-danger" ></span>
        </div>
        <div class="mb-3 row p-1">
            <!-- lay tu displayname in model va no se tu dinh dang kieu du lieu minh duoc dien vao -->
            <label asp-for="DesplayOrder" class="p-0"></label>
            <input asp-for="DesplayOrder" class="form-control"/>
            <span asp-validation-for="DesplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>

            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back</a>

            </div>
        </div>
    </div>
</form>
