@model Category
<!-- add chi them 1 nen khong list<category> -->

<form method="post">
    <input asp-for="Id" hidden /> 
    <div class="border p-3 mt-4">
        <div class="row pb-2 text-center">
            <h2 class="text-primary">Delete category</h2>
            <!--thanh ngang horizontal -->
            <hr />
        </div>
        <!-- canh bao het validation o day -->
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" disabled class="form-control" />
            <!-- canh bao validation -->
            
        </div>
        <div class="mb-3 row p-1">
            <!-- lay tu displayname in model va no se tu dinh danh kie du lieu minh duoc dien vao -->
            <label asp-for="DesplayOrder" class="p-0"></label>
            <input asp-for="DesplayOrder" disabled class="form-control" />
            
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>

            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back</a>

            </div>
        </div>
    </div>
</form>



